<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:layoutDirection="rtl"
    android:orientation="vertical"
    android:padding="@dimen/_10sdp">

    <LinearLayout
        android:id="@+id/authenticateLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_round_white"
        android:orientation="vertical"
        android:padding="@dimen/_20sdp">

        <ProgressBar
            android:id="@+id/progressCircle"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_gravity="center"
            android:indeterminateDrawable="@drawable/progress"
            android:visibility="invisible"
            tools:ignore="MissingConstraints" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_6sdp"
            android:text="كلمة المرور الحالة"
            android:textSize="@dimen/_16sdp" />

        <EditText
            android:id="@+id/inputCurrentPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:hint="@string/hintPassword"
            android:inputType="text"
            android:padding="@dimen/_8sdp"
            android:textAlignment="textStart"
            android:textColor="@color/colorBlackLight"
            android:textDirection="rtl" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_6sdp"
            android:text="كلمة المرور الجديدة"
            android:textSize="@dimen/_16sdp" />

        <EditText
            android:id="@+id/inputNewPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:hint="@string/hintPassword"
            android:inputType="text"
            android:padding="@dimen/_8sdp"
            android:textAlignment="textStart"
            android:textColor="@color/colorBlackLight"
            android:textDirection="rtl" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_6sdp"
            android:text="التحقق من كلمة المرور"
            android:textSize="@dimen/_16sdp" />

        <EditText
            android:id="@+id/inputConfirmNewPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:hint="@string/hintPassword"
            android:inputType="text"
            android:padding="@dimen/_8sdp"
            android:textAlignment="textStart"
            android:textColor="@color/colorBlackLight"
            android:textDirection="rtl" />

        <Button
            android:id="@+id/btnUpdate"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/border_round"
            android:text="تحديث"
            android:textColor="@color/white"
            android:textSize="@dimen/_16sdp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>